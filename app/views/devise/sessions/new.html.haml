.container
  %h1.login-heading IOBoard
  = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin" }) do |f|
    %h2.form-signin-heading Login
    - if alert
      %p.alert= alert
    = f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "email"
    = f.password_field :password, :class => "input-block-level", :placeholder => "password"
    - if devise_mapping.rememberable?
      %label.checkbox
        = f.check_box :remember_me
        remember me
    = f.submit "Sign in", :class => "btn btn-primary"
    = render "devise/shared/links"