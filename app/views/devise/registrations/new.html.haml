.container
  %h1.login-heading IOBoard
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" }) do |f|
    %h2.form-signin-heading Register
    = devise_error_messages!
    = f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "email"
    = f.password_field :password, :class => "input-block-level", :placeholder => "password"
    = f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "...and again"
    = f.submit "Register", :class => "btn btn-primary"
    = render "devise/shared/links"
