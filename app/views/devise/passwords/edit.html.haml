.container
  %h1.login-heading IOBoard
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-signin" }) do |f|
    %h2.form-signin-heading Change Password
    = devise_error_messages!
    = f.password_field :password, :class => "input-block-level", :placeholder => "new password"
    = f.password_field :password_confirmation, :class => "input-block-level", :placeholder => "...and again"
    = f.submit "Change Password", :class => "btn btn-primary"